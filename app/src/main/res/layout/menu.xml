<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu">

    <ImageView
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:id="@+id/flag1"
        android:src="@drawable/france"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="67dp"
        android:layout_marginTop="90dp" />

    <ImageView
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:id="@+id/flag2"
        android:src="@drawable/germany"
        android:layout_alignTop="@+id/flag1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="67dp" />

    <Spinner
        android:layout_width="170dp"
        android:layout_height="33dp"
        android:layout_marginTop="40dp"
        android:id="@+id/spinner"
        android:layout_below="@+id/flag1"
        android:layout_alignStart="@+id/flag1"
        android:background="#c3c3c3"
        android:spinnerMode="dropdown" />

    <Spinner
        android:layout_width="170dp"
        android:layout_below="@+id/flag2"
        android:layout_height="33dp"
        android:id="@+id/spinner2"
        android:layout_marginTop="40dp"
        android:background="#c3c3c3"
        android:spinnerMode="dropdown"
        android:layout_alignStart="@+id/flag2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Choose nations:"
        android:textSize="30sp"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

</RelativeLayout>
